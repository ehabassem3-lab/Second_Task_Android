<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/Post"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"


        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintBottom_toTopOf="@id/Post"
        android:layout_marginBottom="70dp"
        android:layout_marginHorizontal="10dp"
        android:text="Unbiast"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="2 hrs .   ðŸŒ"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="@id/name"



        />
    <TextView
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Post"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:id="@+id/talks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        android:text="Buckle up  . Because change is coming to word press"
        android:layout_marginTop="5dp"
       app:layout_constraintStart_toStartOf="@id/profile"
        android:textStyle="bold"
        android:textSize="17dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://anything.com/color-schemes"
        android:textColor="@color/Blue"
        app:layout_constraintTop_toBottomOf="@+id/talks"
        app:layout_constraintBottom_toTopOf="@id/Post"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/profile"



        />

    <LinearLayout
        android:id="@+id/Post"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="100sp"



        />
    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘ 12"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Post"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/profile"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1 Share  ðŸŸ v"
        app:layout_constraintTop_toBottomOf="@id/Post"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"

        android:layout_marginRight="20dp"

        />
      <View
          android:id="@+id/border"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/black"
          android:layout_marginTop="10dp"
          app:layout_constraintTop_toBottomOf="@id/like"
          />
    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘ Like"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintStart_toStartOf="parent"


        />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬ Comment"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âž¤ Share"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>